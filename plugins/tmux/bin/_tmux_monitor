#!/usr/bin/env bash

tecreset=$(tput sgr0)

if [[ "$(uname)" == "Linux" ]]; then

  \ping -c 1 google.com &> /dev/null && echo -e "\E[32mInternet: \E[36mConnected" || echo -e "\E[32mInternet: \E[36mDisconnected"

  echo -e "\E[32mOperating System Type: \E[36m$(\uname -o)"

  echo -e "\E[32mOS Name: \E[36m$(lsb_release -si)"

  echo -e "\E[32mOS Version: \E[36m$(echo -n $(lsb_release -si)\ ; lsb_release -sr)"

  echo -e "\E[32mArchitecture: \E[36m$(\uname -m)"

  echo -e "\E[32mKernel Release: \E[36m$(\uname -r)"

  echo -e "\E[32mHostname: \E[36m$(\hostname)"

  echo -e "\E[32mInternal IP: \E[36m$(\hostname -I)"

  echo -e "\E[32mExternal IP: \E[36m$(_tmux_myip)"

  echo -e "\E[32mName Servers: \E[36m$(cat /etc/resolv.conf | grep 'nameserver' | awk '{print $2}' | sed -n '1 p')" 

  echo -e "\E[32mLogged In users: \E[36m\n$(who)"

  echo -e "\E[32mRam Usages: \E[36m\n $(\free -h | grep -v +)"

  echo -e "\E[32mDisk Usages: \E[36m\n $(\df -h | sed -n '1 p') $(\df -h | grep '^/dev/*')"

  echo -e "\E[32mLoad Average: \E[36m$(\uptime | awk '{print $10,$11,$12}')"

  echo -e "\E[32mSystem Uptime: \E[36m$(\uptime | awk '{print $3,$4,$5}' |cut -f1 | sed 's/.$//')"

  echo -e "$tecreset"

fi

if [[ "$(uname)" == "FreeBSD" ]]; then

  \ping -c 1 google.com &> /dev/null && echo -e "\E[32mInternet: \E[36mConnected" || echo -e "\E[32mInternet: \E[36mDisconnected"

  echo -e "\E[32mOperating System Type: \E[36m$(\uname -o)"

  echo -e "\E[32mOS Name: \E[36m$(\uname -o)"
  
  echo -e "\E[32mOS Version: \E[36m$(echo -n $(uname)\ ; uname -r)"

  echo -e "\E[32mArchitecture: \E[36m$(\uname -m)"

  echo -e "\E[32mKernel Release: \E[36m$(\uname -r)"

  echo -e "\E[32mHostname: \E[36m$(\hostname)"

  echo -e "\E[32mExternal IP: \E[36m$(_tmux_myip)"

  echo -e "\E[32mName Servers: \E[36m$(cat /etc/resolv.conf | grep 'nameserver' | awk '{print $2}' | sed -n '1 p')" 

  echo -e "\E[32mLogged In users: \E[36m\n$(who)"

  echo -e "\E[32mDisk Usages: \E[36m\n $(\df -h | sed -n '1 p') $(\df -h | grep '^/dev/*')"

  echo -e "\E[32mLoad Average: \E[36m$(\uptime | awk '{print $10,$11,$12}')"

  echo -e "\E[32mSystem Uptime: \E[36m$(\uptime | awk '{print $3,$4,$5}' |cut -f1 | sed 's/.$//')"

  echo -e "$tecreset"

fi
