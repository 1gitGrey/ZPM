plugins=( npm nvm rvm gvm pip pyenv golang ) #Package managers & langs
  

plugins+=( zsh-completions  kill pidof docker  ) #Completions for programs

plugins+=( minesweeper 2048 datauri ansiweather ack ls++ ls-- spark dropbox myip extract mysql q hr pass k marks sshrc servers tor tmux genpasswd viewer desktop ) #Programs

plugins+=( colors grc  dircolors ) #Colors

plugins+=( rationalise-dot zsh-core human ls cd zsh-recompile ) #ZSH

plugins+=( battery node status path git ) #Prompt

plugins+=( hosts translator gitignore command-not-found autoenv fasd history-substring-search zsh-syntax-highlighting zsh-autosuggestions ) #Plugins


if [[ ! -f ~/.zpm/zpm.zsh ]]; then
	git clone --recursive https://github.com/horosgrisa/ZPM ~/.zpm
fi

source ~/.zpm/zpm.zsh

# Variables

