if [[ ! -f ~/.zpm/zpm.zsh ]]; then
	git clone --recursive https://github.com/horosgrisa/ZPM ~/.zpm
fi

source ~/.zpm/zpm.zsh


Plug npm nvm rvm gvm pip pyenv golang  #Package managers & langs

Plug zsh-completions kill pidof docker   #Completions for programs

Plug minesweeper 2048 datauri ansiweather ack ls++ ls-- spark dropbox myip extract mysql q hr pass k marks sshrc servers tor tmux genpasswd viewer desktop  #Programs

Plug colors grc dircolors  #Colors

Plug rationalise-dot zsh-core human ls cd zsh-recompile  #ZSH

Plug battery node status path git  #Prompt

Plug voronkovich/gitignore.plugin.zsh zsh-users/zsh-syntax-highlighting horosgrisa/zsh-history-substring-search horosgrisa/autosuggestions

Plug hosts translator command-not-found autoenv fasd  #Plugins


ZPM_init

# Variables

PROMPT='%{$fg[magenta]%} %M %{$fg[yellow]%}âžœ %{$reset_color%}'
RPROMPT=' $last_status$node_version$gitprompt$battery_charge$current_path%{$reset_color%}'
PS2="%{$fg[green]%}%_>%{$reset_color%}"
WORDCHARS='*?_-[]~=&;!#$%^(){}<>:.'

export NULLCMD=true
export READNULLCMD=less
export PAGER="less"
export EDITOR="vim"
CURRENT_PATH_PREFIX=" "
GIT_PREFIX=" "
NODE_VERSION_PREFIX=" "
BATTERY_CHARGE_PREFIX=" "

ZSH_HIGHLIGHT_STYLES[single-quoted-argument]='fg=yellow'
ZSH_HIGHLIGHT_STYLES[double-quoted-argument]='fg=yellow'
ZSH_HIGHLIGHT_STYLES[bracket-error]='fg=white,bg=red'
ZSH_HIGHLIGHT_STYLES[bracket-level-1]='fg=blue'
ZSH_HIGHLIGHT_STYLES[bracket-level-2]='fg=green'
ZSH_HIGHLIGHT_STYLES[bracket-level-3]='fg=yellow'
ZSH_HIGHLIGHT_STYLES[bracket-level-4]='fg=magenta'
ZSH_HIGHLIGHT_STYLES[cursor-matchingbracket]='fg=red,bg=blue' 
ZSH_HIGHLIGHT_STYLES[alias]='fg=green'
ZSH_HIGHLIGHT_STYLES[path]='fg=cyan,italic,underline'
ZSH_HIGHLIGHT_STYLES[globbing]='fg=red'
ZSH_HIGHLIGHT_STYLES[default]='fg=cyan'
ZSH_HIGHLIGHT_STYLES[cursor]='bg=blue'
